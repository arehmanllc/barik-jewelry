<div id="social-icons" class="social-icons__footer--wrapper mb1">
  {% if settings.etsy != blank %}
    <a class="inline-block v-center mt0 mr3 mb5 ml0" href="{{ settings.etsy }}" title="Etsy">
      {% render 'snip-icons',
         wrapper: '.social-icons__footer--wrapper',
         type: 'social',
         icon: 'etsy',
         size: '20px',
         classes: 'm0 p0',
         fill: fill_color,
         hover: hover_color %}
    </a>
{% endif %}

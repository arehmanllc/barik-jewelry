{%- liquid
  assign icon_type = ''
  assign icon_text = ''

  assign date_range = settings.date_range

  if product.template_suffix == 'set'
    assign icon_type = 'new'
    assign icon_text =  'products.general.set' | t
  elsif product.available
    assign product_created_at = product.created_at | date: '%s'
    assign time_ago = 'now' | date: '%s' | minus: product_created_at | divided_by: 86400
    if time_ago <= date_range
      assign icon_type = 'new'
      assign icon_text =  'products.general.new' | t
    endif
    if product.price < product.compare_at_price
      assign icon_type = 'sale-item'
      assign icon_text =  'products.general.sale' | t
    endif
    if product.price_min < product.compare_at_price_min or product.price_max < product.compare_at_price_max
      assign icon_type = 'sale-item'
      assign icon_text =  'products.general.sale' | t
    endif
    if product.template_suffix == 'pre-order'
      assign icon_type = 'pre-order'
      assign icon_text = 'products.product.pre_order' | t
    endif
    for tag in product.tags
      if tag contains 'custom--'
        assign icon_type = 'custom'
        assign icon_text =  tag | remove: 'custom--' | capitalize
      endif
    endfor
  else
    assign icon_type = 'sold-out'
    assign icon_text =  'products.general.sold' | t
  endif

  if varying_grid == true and index == 3 or index == 4 or index == 13 or index == 14 or index == 23 or index == 24
    assign items_per_row = 'span-6 r-span-2 auto'
  elsif varying_grid == true
    assign items_per_row = 'span-3 r-span-1 auto'
  endif

  assign product_info_mobile_grid_left = 'sm-span-12'

  if varying_grid == true and index == 3 or index == 6 or index == 9 or index == 12 or index == 15 or index == 18
    assign items_per_row_mobile = 'sm-span-12 auto'
    assign product_info_mobile_grid_left = 'sm-span-9'
    assign product_info_mobile_grid_right = 'sm-span-3 sm-a-right'
  elsif varying_grid == true
    assign items_per_row_mobile = 'sm-span-6 auto'
    assign product_info_mobile_grid_left = 'sm-span-12'
    assign product_info_mobile_grid_right = 'sm-span-12'
  endif

  assign title_alongside_price = false
  case settings.product_info_appearance
  when 'title_alongside_price'
    assign title_alongside_price = true
    assign title_grid = 'span-8'
    assign price_grid = 'span-4'
    assign align = 'a-left'
  else
    assign title_grid = 'span-12'
    assign price_grid = 'span-12 font-size--base'
    if settings.product_info_appearance contains 'left'
      assign align = 'a-left'
      assign product_info_mobile_grid_left = 'sm-span-12'
      assign product_info_mobile_grid_right = 'sm-span-12'
    elsif settings.product_info_appearance contains 'right'
      assign align = 'a-right'
      assign product_info_mobile_grid_left = 'sm-span-12'
      assign product_info_mobile_grid_right = 'sm-span-12'
    elsif settings.product_info_appearance contains 'center'
      assign align = 'a-center'
      assign product_info_mobile_grid_left = 'sm-span-12'
      assign product_info_mobile_grid_right = 'sm-span-12'
    else
      assign align = ''
    endif
  endcase
-%}

<article
  class="product-loop__item {{ carousel_slide }} {% unless carousel %}{{ items_per_row }} {{ items_per_row_mobile }} animate--text delay--{{ index | minus: 1 | modulo: delay_mod | times: 1 }}{% endunless %} relative product-loop__item--{{ settings.image_ratio }}"
  data-alpha="{{ product.title }}"
  data-price="{{ product.price }}">

  <div class="product-image relative">
    {% unless icon_type == '' %}
      <div class="product-loop__badge-icon icon-type--{{ icon_type }} icn">{{ icon_text }}</div>
    {% endunless %}
    {% unless product.compare_at_price_varies %}
      {%- if section.settings.show_savings and icon_type == 'sale-item' -%}
        <div class="product-loop__badge-icon icon-type--savings icn">
          {% assign savings = product.compare_at_price | minus: product.price %}
          <span class="product-loop__price--savings savings">
            ({{ 'collections.general.save' | t }} {{ savings | money }})
          </span>
        </div>
      {%- endif -%}
    {% endunless %}

    <div class="product-loop__img-wrapper relative">
      {% assign image_box_ratio = product.featured_media.preview_image.height | append: ".0" | times: 1 | divided_by: product.featured_media.preview_image.width | times: 100 | append: "%" %}
      <a class="product-loop__img-link" href="{{ product.url | within: collection }}" tabindex="-1" title="{{ product.title | escape }}" style="--box-ratio: {{ image_box_ratio }}">
        {%- if product.media.size < 1 -%}
           <div class="demo-1  box-ratio" style="padding-bottom: 100%;">
             {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
           </div>
        {%- else -%}
          {%- liquid
            assign sm_render = 'calc(100vw / 2)'
            assign md_render = 'calc(100vw / ' | append: grid_items | append: ')'
            assign lg_render = 'calc(1600px / ' | append: grid_items | append: ')'

            # Handle product medias
            assign product_video_medias = product.media | where: 'media_type', 'video'
            assign has_video_media = false
            if product_video_medias.size > 0
              assign has_video_media = true
            endif

          -%}

          {%- if settings.product_grid_video and has_video_media -%}
            {% render 'product-loop-video',
              product: product %}
          {% else %}
            {% render 'helper-image',
               type: product.featured_media.preview_image,
               sm_render: sm_render,
               md_render: md_render,
               lg_render: lg_render,
               img_width: '100%',
               img_height: xlg_render,
               loading: loading,
               fetchpriority: fetchpriority %}
          {%- endif -%}


          {% if settings.secondary_images_hover and product.media.size > 1 and product.media[1].media_type == 'image' %}
            <div class="product-loop__img-wrapper--hidden">
             {% render 'helper-image',
                type: product.media[1],
                sm_render: sm_render,
                md_render: md_render,
                lg_render: lg_render,
                img_width: '100%',
                img_height: xlg_render %}
            </div>
          {% elsif settings.secondary_images_hover and product.media.size > 1 and product.media[1].media_type != 'image' %}
            <div class="product-loop__img-wrapper--hidden">
             {% render 'helper-image',
                type: product.media[1].preview_image,
                sm_render: sm_render,
                md_render: md_render,
                lg_render: lg_render,
                img_width: '100%',
                img_height: xlg_render %}
            </div>
          {% endif %}
        {%- endif -%}
      </a>
    </div>

    {%- liquid
      if routes.root_url == '/'
        assign product_url = '/products/' | append: product.handle | append: '?section_id=quickshop'
      else
        assign product_url = routes.root_url | append: '/products/' | append: product.handle | append: '?section_id=quickshop'
      endif

      assign has_model = false
      assign has_video = false
      for media in product.media
        if media.media_type == "video" or media.media_type == "external_video"
          assign has_video = true
          continue
        endif
        if media.media_type == "model"
          assign has_model = true
          continue
        endif
      endfor

    -%}

    {%- unless product.template_suffix == 'set' -%}
      {%- if product.variants.size > 1 -%}
        <button class="quick-view-{{ product.id }} product-listing__quickview-trigger js-quickview-trigger no-js-hidden"
          type="button" name="button"
          aria-hidden="true"
          data-product-url="{{ product_url }}"
          data-has-model="{{ has_model }}"
          data-has-video="{{ has_video }}"
          data-product-pickup-availability="true"
          data-product-complementary-products="true">

          {% render 'snip-icons',
            wrapper: '.product-listing__quickview-trigger--modal',
            type: 'theme',
            icon: 'search',
            classes: 'quickview-trigger--search vib-center',
            size: '18px',
            fill: 'var(--directional-text)',
            hover: 'var(--directional-text)' %}
          {% render 'snip-icons',
            wrapper: '.product-listing__quickview-trigger--modal',
            type: 'apollo',
            icon: 'menu-dots',
            classes: 'quickview-trigger--dots vib-center',
            size: '18px',
            fill: 'var(--directional-text)',
            hover: 'var(--directional-text)' %}
        {% render 'snip-icons',
            wrapper: '.product-listing__quickview-trigger--modal',
            type: 'apollo',
            icon: 'spinner',
            classes: 'quickview-trigger--loading vib-center',
            size: '18px',
            fill: 'var(--directional-text)',
            hover: 'var(--directional-text)' %}
        </button>
      {%- elsif product.available -%}
        <button class="quick-view-{{ product.id }} product-listing__quickview-trigger js-quickview-trigger no-js-hidden"
          type="button" name="button"
          aria-hidden="true"
          data-quick-add
          data-product-url="{{ product_url }}"
          data-has-model="{{ has_model }}"
          data-has-video="{{ has_video }}"
          data-product-pickup-availability="true"
          data-product-complementary-products="true">
            {% render 'snip-icons',
              wrapper: '.product-listing__quickview-trigger--modal',
              type: 'apollo',
              icon: 'search',
              classes: 'quickview-trigger--search vib-center',
              size: '18px',
              fill: 'var(--directional-text)',
              hover: 'var(--directional-text)' %}
            {% render 'snip-icons',
              wrapper: '.product-listing__quickview-trigger--modal',
              type: 'apollo',
              icon: 'plus',
              classes: 'quickview-trigger--plus vib-center',
              size: '18px',
              fill: 'var(--directional-text)',
              hover: 'var(--directional-text)' %}
            {% render 'snip-icons',
              wrapper: '.product-listing__quickview-trigger--modal',
              type: 'apollo',
              icon: 'checkmark',
              classes: 'quickview-trigger--check vib-center',
              size: '18px',
              fill: 'var(--directional-text)',
              hover: 'var(--directional-text)' %}
            {% render 'snip-icons',
              wrapper: '.product-listing__quickview-trigger--modal',
              type: 'apollo',
              icon: 'spinner',
              classes: 'quickview-trigger--loading vib-center',
              size: '18px',
              fill: 'var(--directional-text)',
              hover: 'var(--directional-text)' %}
        </button>
      {%- endif -%}
    {%- endunless -%}
  </div>

  <div class="grid__wrapper edge pt2 cg0 sm-cg0 rg0">
    <div class="product-loop__info-wrapper {{ title_grid }} {{ align }} {{ product_info_mobile_grid_left }} auto">
      {% if settings.product_grid_vendor %}
        <p class="product-loop__vendor block mb2">{{ product.vendor }}</p>
      {% endif %}
        <p class="product-loop__title"><a href="{{ product.url | within: collection }}">{{ product.title }}</a></p>
    </div>

    {%- if product.template_suffix == 'set' -%}
      <div class="product-loop__price {{ price_grid }} {% if title_alongside_price %}a-right sm-{{ align }}{% else %} {{ align }}{% endif %} {{ product_info_mobile_grid_right }} auto">
        {{ 'products.product.price_varies' | t }}
      </div>
    {%- else -%}
      <div class="product-loop__price {{ price_grid }} {% if title_alongside_price %}a-right sm-{{ align }}{% else %} {{ align }}{% endif %} {{ product_info_mobile_grid_right }} auto">
        {% if product.price < product.compare_at_price %}
          <span class="product-loop__price--sale onsale inline-block">
            {{ product.price | money }}
          </span>
          <span class="product-loop__price--compare was inline-block">
            {{ product.compare_at_price | money }}
          </span>
          {% assign savings = product.compare_at_price | minus: product.price %}
          <span class="product-loop__price--savings savings hide">
            ({{ 'collections.general.save' | t }} {{ savings | money }})
          </span>
        {% else %}
          {% if product.price_varies %}
            {{ 'products.general.from' | t }} {{ product.price_min | money }} - {{ product.price_max | money }}
          {% else %}
            {{ product.price | money }}
          {% endif %}
        {% endif %}

        {%- render 'product-unit-price', variant: product.selected_or_first_available_variant -%}
      </div>
    {%- endif -%}
  </div>


  {% if settings.show_collection_swatches %}
    <div class="product-loop__color-swatches {{ align }} mt1">
      {% render 'snip-product-loop-swatches',
        product: product,
        color_swatch_style: settings.color_swatch_style, align: align %}
    </div>
  {% endif %}


  {% if settings.show_collection_sizes %}
    <div class="product-loop__sizes {{ align }} mt1">
      {% render 'snip-product-loop-sizes',
        product: product,
        align: align
      %}
    </div>
  {% endif %}

</article>

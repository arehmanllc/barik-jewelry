{%- liquid

  assign option_name = option.name | downcase
  assign color_swatch_options = settings.swatch_option_names | replace: ' ,', ',' | replace: ', ', ',' | split: ',' | downcase
  assign current_option = "option" | append: option.position
  assign other_options = "option1 option2 option3" | remove: current_option | strip | split: " "

-%}

<div class="swatches__container pt2 mb2 js-variant-selector" data-option-index="{{ option.position }}" data-other-options='{{ other_options | json }}'>
  <p class="swatches__option-name">{{ option.name }} &nbsp;| {% for option_value in option.values %}{% if option.selected_value == option_value %}<span id="selected-option-{{ option.position }}" class="swatches__option-value">{{ option_value }}</span>{% endif %}{% endfor %}</p>

  {% for option_value in option.values %}
    <!-- Checking Availability -->
    {%- liquid

      assign css_color = option_value | split: ' ' | last | handle

    -%}

    {%- liquid

      assign available = false
      assign swatch_image_url = nil
      if option_value.swatch.image
        assign swatch_image_url = option_value.swatch.image | image_url: width: 100
      endif
      if option_value.swatch.color and color_swatch_style == 'swatch'
        assign css_color = option_value.swatch.color
      endif

      assign available = option_value.available

    -%}

    <!-- Building Variant Image & Color -->
    {%- liquid

      assign variant_image_url =  ''

      if option_value.variant.image != blank
        assign variant_image_url = option_value.variant.image | image_url: width: 100
      endif

      assign checked = ""

      if option_value.selected
        assign checked = 'checked="checked"'
      endif

      assign swatch_img = null


      assign swatch_color_name = option_value | handle | append: '.png'

      if images[swatch_color_name] != blank
        assign swatch_img = swatch_color_name | file_url
      endif

    -%}

    {%- capture handle %}{{ section.id }}-{{ product.id }}-{{ unique_id }}-{{ option.name | handleize }}-{{ forloop.index0 }}{% endcapture -%}

    {% capture radio_button %}
      <input type="radio" id="{{ handle }}"
            class="swatches__form--input"
            name="{{ option_name }}-{{ product.id }}-{{ unique_id }}"
            value="{{ option_value | escape }}"
            form="{{ form_id }}"
            data-position="{{ option.position }}"
            data-option-value-id="{{ option_value.id }}"
            {{ checked }}>
    {% endcapture %}

    {% capture regular_swatch %}
      <div class="swatches__swatch--regular swatch-element {% unless available %}soldout{% endunless %} js-swatch-element">
        {{ radio_button }}

        <label class="swatches__form--label" for="{{ handle }}" tabindex="0">
          {{ option_value }}
        </label>
      </div>
    {% endcapture %}

    {% capture color_swatch %}
      <div class="swatches__swatch--color swatch-element color swatches__shape--{{ color_swatch_shape }} {% unless available %}soldout{% endunless %} js-swatch-element">

        {{ radio_button }}

        <label class="swatches__form--label"
        tabindex="0"
        for="{{ handle }}"
        data-swatch-color="{{ option_value | handleize }}"
        style="background-color: {{ css_color }};
        {% unless color_swatch_style == 'default-color' %}
          background-image: url({% if color_swatch_style == 'custom-image' and swatch_img != null %}{{ swatch_img }}{% elsif color_swatch_style == 'variant-image' %}{{ variant_image_url }}{% elsif color_swatch_style == 'swatch' %}{{ swatch_image_url }}{% endif %}); background-size:50px;background-position: center center;
        {% endunless %}">
        </label>
      </div>
    {% endcapture %}

    {% if show_color_swatches and color_swatch_options contains option_name %}
      {{ color_swatch }}
    {% else %}
      {{ regular_swatch }}
    {% endif %}
  {% endfor %}
</div>

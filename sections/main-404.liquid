{% comment %} 404 Error Assets {% endcomment %}
{{ 'section-main-404.css' | asset_url | stylesheet_tag: preload: true }}

{%-  liquid

  if settings.section_button_style == 'borders'
    assign button_style = 'btn-border-link'
  else
    assign button_style = 'button'
  endif

-%}

{% comment %} 404 Error Template {% endcomment %}
<section class="error-page"
  data-section-id="{{ section.id }}"
  data-section-type="404-page"
  data-section-loaded="false">
  <div class="grid__wrapper pt10 pb10">
    <div class="push-4 span-4 a-center">
      <p>{{ 'general.404.subtext' | t }}</p>
      <a class="{{ button_style }} inline-block relative" href="{{ routes.root_url }}">
        <span>{{ 'general.404.button' | t }}</span>
      </a>
    </div>
  </div>
</section>

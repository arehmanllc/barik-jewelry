{% comment %} Featured Product Logic {% endcomment %}
{%- liquid
  assign product = all_products[section.settings.featured_product]
  assign current_variant = product.selected_or_first_available_variant
  assign first_3d_model = product.media | where: "media_type", "model" | first

  assign section_padding = ''
  if section.settings.section_padding == 'top'
    assign section_padding = 'pb0'
  elsif section.settings.section_padding == 'bottom'
    assign section_padding = 'mt0'
  elsif section.settings.section_padding == 'none'
    assign section_padding = 'mt0 pb0'
  endif

  assign thumbnail_position = section.settings.thumbnail_position
  assign click_to_enlarge = section.settings.click_to_enlarge
  assign enable_video_looping = section.settings.enable_video_looping

  if settings.section_title_align == 'center'
    assign heading_align = 'a-center'
  else
    assign heading_align = 'a-left'
  endif

  if product.media.size < 1
   assign is_single_image = true
  else
   assign is_single_image = false
  endif

  assign has_media = product.media | has: 'media_type', 'model'
  assign has_video = product.media | has: 'media_type', 'video'
  assign has_plyr = product.media | has: 'media_type', 'video'
  assign has_ytv = product.media | has: 'media_type', 'external_video'

  assign popup_count = section.blocks | where: 'type', 'metafield_popup' | size

  if popup_count > 1
    assign multiples = 'multiples--true'
  endif

  assign has_pickup_availability = section.blocks | has: 'type', 'product_pickup'
  assign has_complementary_products = section.blocks | has: 'type', 'complementary_products'

  # Form Ids
  assign product_variant_form = 'product-form-' | append: product.id | append: '-' | append: section.id
  assign product_button_form = 'product-button-form-' | append: product.id | append: '-' | append: section.id

-%}

{% comment %} Featured Product Assets {% endcomment %}

{% comment %} Featured Product Template {% endcomment %}
<div
  class="featured-product featured-product-{{ section.id }} product-{{ product.id }} product__section--main global__section {{ section_padding }} {% if request.visual_preview_mode %}preview-mode{% endif %}"
  data-product-id="{{ product.id }}"
  data-section-id="{{ section.id }}"
  data-url="{{ product.url }}"
  data-section-type="product"
  data-section-loaded="false"
  data-product-video="{{ has_video }}"
  data-product-model="{{ has_media }}"
  data-asset-url="{{ 'section-featured-product.js' | asset_url }}"
  data-initial-variant="{{ current_variant.featured_media.id }}"
  data-product-gallery="thumbnail"
  data-product-pickup-availability="{{ has_pickup_availability }}"
  data-product-complementary-products="{{ has_complementary_products }}">

  {% render 'product-json', product: product %}

  <div class="grid__wrapper aflow">
    {% render 'snip-headings', url: product.url, align: heading_align, grid: 'span-12' %}

    {% if product != blank %}
      <article
      id="product-photos"
      class="product__section-images product-gallery__wrapper span-6 auto v-start js-product-gallery single_image--{{ is_single_image }}"
      data-product-single-media-group
      data-gallery-config='{{ product_gallery_config }}'>
        {% render 'product-image-gallery',
          product: product,
          thumbnail_position: thumbnail_position,
          click_to_enlarge: click_to_enlarge,
          enable_video_looping: enable_video_looping %}
      </article>

      <article
        id="product-description"
        class="product__section-right span-6 auto pl4 sm-px5 md-px5 v-start">
        {% for block in section.blocks %}
          {% case block.type %}
            {%- when 'text_metafield' -%}
             {%- unless block.settings.content == blank -%}
               <div class="product-template__text-block pt2 mb2 animate--text delay--{{ forloop.index }}" {{ block.shopify_attributes }}>
                {%- if block.settings.label != blank -%}
                  <p class="product-template__text-block--label mb0">{{ block.settings.label }}</p>
                {%- endif -%}
                {%- if block.settings.content != blank -%}
                  <div class="product-template__text-block--content rte pt1 mb0">
                    <p>{{ block.settings.content }}</p>
                  </div>
                {%- endif -%}
               </div>
             {%- endunless -%}
            {%- when 'richtext_metafield' -%}
              {%- unless block.settings.content == blank -%}
                 <div class="product-template__text-block pt2 mb2 animate--text delay--{{ forloop.index }}" {{ block.shopify_attributes }}>
                  {%- if block.settings.label != blank -%}
                    <p class="product-template__text-block--label mb0">{{ block.settings.label }}</p>
                  {%- endif -%}
                  {%- if block.settings.content != blank -%}
                    <div class="product-template__text-block--content rte pt1 mb0">
                      {{ block.settings.content }}
                    </div>
                  {%- endif -%}
                 </div>
               {%- endunless -%}
            {%- when 'product_title' -%}
              <h1 class="h2 pt2 mb1 animate--text delay--{{ forloop.index }}" {{ block.shopify_attributes }}>
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h1>
            {%- when 'product_prices' -%}
             <div class="product-form__prices mb2 animate--text delay--{{ forloop.index }}" {{ block.shopify_attributes }}>
              {% render 'snip-product-price', variant: current_variant, product: product %}
              {% if section.settings.show_tax_info %}{% render 'snip-product-taxes' %}{% endif %}
             </div>
            {%- when 'product_sku' -%}
              <div class="product__sku-container pt2 mb2{% if current_variant.sku == blank %} display-none{% endif %} animate--text delay--{{ forloop.index }}" {{ block.shopify_attributes }}>
                <span class="product__sku-label">{{ 'customer.order.details.sku' | t }} &nbsp; | &nbsp;</span>
                <span class="product__sku-value js-variant-sku">{{ current_variant.sku }}</span>
              </div>
            {%- when 'product_form' -%}
              <div class="product-form__variants product__section--variants inline-block animate--text delay--{{ forloop.index }}" {{ block.shopify_attributes }}>
                {% render 'product-variants',
                  product: product,
                  block: block,
                  section: section,
                  type: section,
                  product_type: 'product',
                  current_variant: current_variant,
                  product_form_config: product_form_config,
                  form_id: product_variant_form
                %}
              </div>
            {%- when 'product_buttons' -%}
              {%- render 'product-buttons',
                product_type: 'product',
                product: product,
                block: block,
                section: section,
                current_variant: current_variant,
                index: forloop.index,
                show_quantity: block.settings.show_quantity,
                form_id: product_button_form
             -%}
            {%- when 'product_customization' -%}
              {% render 'product-customization', block: block, form_id: product_button_form, forloop: forloop %}
            {%- when 'product_pickup' -%}
              {% render 'snip-product-pickup-availability', product: product, current_variant: current_variant, block: block, shop: shop, routes: routes, index: forloop.index %}
            {%- when 'product_description' -%}
              {%- if product.description != blank -%}
                <div class="product-template__description rte pt3 mb2 animate--text delay--{{ forloop.index }}" {{ block.shopify_attributes }}>
                  <p class="label mb1">{{ 'products.product.product_info' | t }}</p>
                  {% if product.description contains '[#' %}
                    {{ product.description | split: '[#' | first }}
                  {% else %}
                    {{ product.description }}
                  {% endif %}
                </div>
              {%- endif -%}
            {%- when 'social_share' -%}
              <div class="product-template__social-share pt2 pb2 animate--text delay--{{ forloop.index }}" {{ block.shopify_attributes }}>
                <p class="inline-block mb0 mr3 v-center">{{ 'products.product.social_share' | t }}</p>
                {% render 'snip-social-sharing',
                  share_title: product.title,
                  share_permalink: product.url,
                  share_image: product %}
              </div>
            {%- when 'payment_terms' -%}
              {%- form 'product', product, id: 'product-form-installment' -%}
                <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                <div class="spi-banner animate--text delay--{{ forloop.index }}" {{ block.shopify_attributes }}>
                  {{ form | payment_terms }}
                </div><!-- /#spi-banner -->
              {%- endform -%}
            {%- when 'metafield_popup' -%}
              {%- capture popup_classes -%}
                product-form__popup pt2 mb2 sm-pt1 sm-mb1 {{ multiples }} border--{{ block.settings.show_border_label }} animate--text delay--{{ forloop.index }}
              {%- endcapture -%}
              {% render 'snip-product-popup', block: block, forloop: forloop, multiples: multiples, classes: popup_classes %}
            {% when 'complementary_products' %}
              <div class="product-blocks__block product-blocks__block--{{ block.type }}">
                {%
                  render 'complementary-products',
                  section: section,
                  block: block,
                  product: product
                %}
              </div>
            {% when 'range_indicator' %}

              {% liquid
                assign range_steps = block.settings.range_steps | plus: 0
                assign range_int = block.settings.selected_range | plus: 0

                assign range_1_label = false
                assign range_2_label = false
                assign range_3_label = false

                if block.settings.range_1_label != blank
                  assign range_1_label = block.settings.range_1_label
                  assign has_label = true
                endif
                if block.settings.range_2_label != blank
                  assign range_2_label = block.settings.range_2_label
                  assign has_label = true
                endif
                if block.settings.range_3_label != blank
                  assign range_3_label = block.settings.range_3_label
                  assign has_label = true
                endif

              %}

              <div class="product-blocks__block product-blocks__block--{{ block.type }} product__section--range-indicator" {{ block.shopify_attributes }}>
                <p class="block--title">{{ block.settings.title }}</p>
                <div class="range--container{% if block.settings.range_gaps %} has-gaps{% endif %}">
                  {% for i in (1..range_steps) %}
                    <div class="range--integer{% if forloop.index <= range_int %} fill--range{% endif %}"></div>
                  {% endfor %}
                </div>
                {% if has_label %}
                  <div class="range--labels">
                    {% if range_1_label %}<div class="range--label">{{ range_1_label | escape }}</div>{% endif %}
                    {% if range_2_label %}<div class="range--label">{{ range_2_label | escape }}</div>{% endif %}
                    {% if range_3_label %}<div class="range--label">{{ range_3_label | escape }}</div>{% endif %}
                  </div>
                {% endif %}
              </div>
              {% style %}
                .product-blocks__block--{{ block.type }}.product__section--range-indicator {
                  --range-bg: {{ block.settings.background_color }};
                  --range-bg-fill: {{ block.settings.background_color_fill }};
                }
                {% endstyle %}

            {% when 'countdown' %}

              <script src="{{ 'countdown.js' | asset_url }}" async></script>

              {% liquid

                assign countdown_date_end = block.settings.countdown_date_end
                assign countdown_time_end = block.settings.countdown_time_end

                assign countdown_date_parts = countdown_date_end | split: ':'
                assign countdown_time_parts = countdown_time_end | split: ':'

                assign year = countdown_date_parts[2]
                assign month = countdown_date_parts[1]
                assign day = countdown_date_parts[0]
                assign hour = countdown_time_parts[0]
                assign minute = countdown_time_parts[1]

                assign countdown_end_date = year | append: '-' | append: month | append: '-' | append: day | append: ' ' | append: hour | append: ':' | append: minute | date: '%s'
                assign date_now = 'now' | date: '%s'

                assign countdown_exists = false
                if countdown_end_date > date_now
                  assign countdown_exists = true
                endif

              %}

              {% if countdown_exists %}

                <div id="block-{{ block.id }}" class="product-template__countdown rte mt2 mb3 animate--text delay--{{ forloop.index }}" {{ block.shopify_attributes }}>

                    <div
                      class="countdown__wrapper"
                      data-section-type="countdown"
                      data-launch-date="{{ countdown_end_date }}"
                      data-section-id="{{ section.id }}"
                      data-base-url="{{ shop.url }}{{ routes.root_url }}"
                      data-hide-after-countdown="{{ block.settings.hide_after_countdown }}"
                    >
                      <div class="countdown__grid">

                        <div class="countdown__time--content">
                          {{ block.settings.text }}
                        </div>

                        <div class="countdown__ended--content" style="display:none;">
                          {{ block.settings.countdown_complete_text }}
                        </div>

                        {% if countdown_exists %}
                          <div class="countdown__time--wrapper">
                            <p class="countdown__time" data-launch-days></p>
                            <p class="countdown__time-label">{{ 'sections.countdown.days' | t }}</p>
                            <span class="countdown__colon-divider">:</span>
                          </div>
                          <div class="countdown__time--wrapper">
                            <p class="countdown__time" data-launch-hours></p>
                            <p class="countdown__time-label">{{ 'sections.countdown.hours' | t }}</p>
                            <span class="countdown__colon-divider">:</span>
                          </div>
                          <div class="countdown__time--wrapper">
                            <p class="countdown__time" data-launch-mins></p>
                            <p class="countdown__time-label">{{ 'sections.countdown.mins' | t }}</p>
                            <span class="countdown__colon-divider">:</span>
                          </div>
                          <div class="countdown__time--wrapper">
                            <p class="countdown__time" data-launch-secs></p>
                            <p class="countdown__time-label">{{ 'sections.countdown.secs' | t }}</p>
                          </div>
                        {% endif %}
                      </div>
                    </div>

                    {% style %}
                      #block-{{ block.id }}.product-template__countdown {
                        --background: {{ block.settings.background_color }};
                        --text-color: {{ block.settings.text_color }};
                        {% if block.settings.hide_after_countdown and countdown_exists == false %}
                          display: none;
                        {% endif %}
                      }
                    {% endstyle %}

                </div>
              {% endif %}

            {%- when '@app' -%}
              <div class="product__section--app" {{ block.shopify_attributes }}>
                {% render block %}
              </div>
            {% when 'custom_liquid' %}
              <div class="product__block--custom-liquid product__section--custom-liquid {{ block.shopify_attributes }}">
                {{ block.settings.custom_liquid }}
              </div>
          {% endcase %}
        {% endfor %}

      </article>
    {% else %}
      {% render 'onboard-single-product',
         show_quantity: block.settings.show_quantity,
         form_width: 'span-4 push-7 v-center',
         gallery_width: 'span-6 v-center' %}
    {% endif %}
  </div>

  {%- if first_3d_model -%}
    <script type="application/json" id="ModelJson-{{ section.id }}">
      {{ product.media | where: 'media_type', 'model' | json }}
    </script>
  {%- endif -%}
  {%- if has_ytv -%}
     <script type="text/javascript">
      // Youtube API callback
      function onYouTubeIframeAPIReady() {
        setTimeout(function() {
          ProductVideo.loadVideos('youtube');
        }, 600);
      }
    </script>
    <script src="https://www.youtube.com/iframe_api" id="youtube-sdk" async></script>
  {%- endif -%}

</div>

